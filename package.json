{
  "name": "genron_sf_fun",
  "private": true,
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "build:css:compile": "sass ./app/assets/stylesheets/application.scss:./app/assets/builds/application.css --no-source-map --load-path=node_modules",
    "build:css:prefix": "postcss ./app/assets/builds/application.css --use=autoprefixer --output=./app/assets/builds/application.css",
    "build:css": "yarn build:css:compile && yarn build:css:prefix",
    "watch:css": "nodemon --watch ./app/assets/stylesheets/ --ext scss --exec \"yarn build:css\"",
    "format": "prettier '**/*.{json,js,ts,jsx,tsx}' --ignore-path .gitignore --write && eslint . --ext .js,.ts,.jsx,.tsx --ignore-path .gitignore --fix",
    "lint": "prettier '**/*.{json,js,ts,jsx,tsx}' --ignore-path .gitignore --check && eslint . --ext .js,.ts,.jsx,.tsx --ignore-path .gitignore && tsc"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.5.2",
    "@fortawesome/fontawesome-svg-core": "^6.4.2",
    "@fortawesome/free-brands-svg-icons": "^6.4.2",
    "@fortawesome/free-solid-svg-icons": "^6.4.2",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@popperjs/core": "^2.11.8",
    "@rails/ujs": "^7.1.3",
    "@sentry/browser": "^7.31.1",
    "autoprefixer": "^10.4.19",
    "bootstrap": "^5.3.3",
    "chart.js": "^4.3.3",
    "esbuild": "^0.20.2",
    "google-palette": "^1.1.0",
    "nodemon": "^3.1.0",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "react": "^18.2.0",
    "react-bootstrap": "^2.8.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-flip-toolkit": "^7.1.0",
    "sass": "^1.76.0"
  },
  "devDependencies": {
    "@prettier/plugin-ruby": "^1.6.1",
    "@types/node": "^20.12.8",
    "@types/rails__ujs": "^6.0.4",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.8.8",
    "prettier-plugin-erb": "^0.1.0",
    "typescript": "^5.1.6"
  },
  "browserslist": [
    "defaults"
  ]
}
